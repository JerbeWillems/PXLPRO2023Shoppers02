@model PXLPRO2023Shoppers02.Models.LoginModel

@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<h4>LoginModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserName" class="control-label"></label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col">
                        <input type="submit" value="Login" class="btn btn-primary" />
                    </div>
                    <div class="col">
                        <a class="btn btn-danger" asp-controller="account" asp-action="FacebookLogin">Facebook</a>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <p>
                    <a asp-controller="Account" asp-action="Register">Registreer een nieuwe gebruiker</a>
                </p>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="account" asp-action="Index">Back to List</a>
</div>


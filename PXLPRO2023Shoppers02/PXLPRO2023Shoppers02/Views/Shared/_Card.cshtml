@model PXLPRO2023Shoppers02.Models.ViewModels.CategoryViewModel

<div class="wrapper">
    <div class="product-img">
        <img src="@Model.Producten.ProductImage" alt="FotoSofa">
    </div>
    <div class="product-info">
        <div class="product-text">
            <h1>@Model.Producten.ProductName</h1>
            <h2>@Model.Categorys.CategoryName</h2>
            <p>@Model.Producten.ProductDescription</p>
        </div>
        <div class="product-price">
            <p>@Model.Producten.ProductPrice<span> €</span></p>
             <form asp-controller="Shop" asp-action="Detail" asp-route-productId="@Model.Producten.ProductId" method="post">
                <button type="submit" class="btn-buy">Buy now</button>
            </form>
        </div>
    </div>
</div>
